@model LatiumMarketplace.Models.BidViewModels.Bid

@{
    ViewData["Title"] = "Create";
    DateTime availableDate = Model.asset.addDate;
}

@{
    @if (Model.asset.price > (decimal)0.00)
    {
        <form asp-action="Create">
            <div class="form-horizontal">
                <h2>Buy Now!</h2>
                <hr />
                <h3>@Model.asset.name</h3>
                <h4>@Model.asset.description</h4>
                <h4>Price: $@Model.asset.price</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="BUY" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <form asp-action="Create">
            <div class="form-horizontal">
                <h2>Rent Now!</h2>
                <hr />
                <h3>@Model.asset.name</h3>
                <h4>@Model.asset.description</h4>
                @if(@Model.asset.priceDaily == (decimal)0.00){
                    <h4>Daily Rental Not Available</h4>
                }
                else
                {
                    <h4>Daily Rate: $@Model.asset.priceDaily</h4>
                }
                @if (@Model.asset.priceWeekly == (decimal)0.00)
                {
                    <h4>Weekly Rental Not Available</h4>
                }
                else
                {
                    <h4>Weekly Rate: $@Model.asset.priceWeekly</h4>
                }
                @if (@Model.asset.priceMonthly == (decimal)0.00)
                {
                    <h4>Monthly Rental Not Available</h4>
                }
                else
                {
                    <h4>Monthly Rate: $@Model.asset.priceMonthly</h4>
                }
                <h4>Available Starting From: @availableDate</h4>
                <hr />

                <h4>Choose Your Rental Period</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="startDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="startDate" class="form-control" />
                        <span asp-validation-for="startDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="endDate" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="endDate" class="form-control" />
                        <span asp-validation-for="endDate" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Rent" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    }
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
